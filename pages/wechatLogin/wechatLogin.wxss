/* pages/wechatLogin/wechatLogin.wxss */
Page{
    background-color: #fef9ef;
    font-size: 42rpx;
    color: #333333;
}
.headerContainer {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.headerPicture {
    border-radius: 50%;
    width: 200rpx;
    height: 200rpx;
}
 
.loginTip {
    width: 600rpx;
    margin: 0 auto;
    margin-bottom: 90rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
 
.loginTipBottom {
    display: block;
    color: #999592;
    margin-top: 40rpx;
    font-size: 34rpx;
}
 
.bottomButton {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
    background-color: #ff5e5b;
}