.zero {
  display: flex;
  flex-flow: column;
  font-size: 35rpx;
  margin: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.zero .first {
  color: #000;
  display: flex;
  justify-content: space-between;
}
.zero .first .earing_info {
  flex: 8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 20rpx;
  margin-right: 30rpx;
}
.zero .first .icon2 {
  flex: 1;
  margin-top: 0rpx;
  font-size: 34rpx;
  color: #ff5e5b;
}
.zero .time {
  display: flex;
  margin-right: 30rpx;
  margin-bottom: 13rpx;
  justify-content: flex-end;
  color: #999592;
  font-size: 25rpx;
}
.icon1 {
  flex: 1;
  margin-left: 9rpx;
  margin-top: 7rpx;
  font-size: 67rpx;
  color: #ff5e5b;
}
.icon3 {
