}
.picture{
    width: 200rpx;
    height: 200rpx;
    margin-right: 25rpx;
    margin-bottom: 25rpx;
}
.bottomoptions{
    width: 750rpx;
    display: flex;
    position: fixed;
    bottom: 0rpx;
}

.bottomcontainer{
    width: 375rpx;
    padding: 25rpx;
    background-color: #ff5e5b;
    border-radius: 15rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}



.leaveContainer{
    width: 702rpx;
    margin: 25rpx 25rpx 200rpx 25rpx;
}
.leaveInnerTop{
    width: 220rpx;
    height: 65rpx;
    background-color: #ff5e5b;
    font-size: 42rpx;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 25rpx;
}
.leaveInnerBottom{
    background-color: #ffffff;
    border-radius: 20rpx;
    padding: 25rpx;
    margin-bottom: 25rpx;
